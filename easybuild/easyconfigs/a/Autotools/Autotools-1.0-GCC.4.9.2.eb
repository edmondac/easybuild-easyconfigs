easyblock = 'Bundle'

name = 'Autotools'
# this version number has no real meaning
version = '1.0'

homepage = 'http://autotools.io'
description = """This bundle collect the standard GNU build tools: Autoconf, Automake and libtool"""

toolchain = {'name': 'GCC', 'version': '4.9.2'}

dependencies = [
    ('Autoconf', '2.69'),
    ('Automake', '1.15'),
    ('libtool', '2.4.2'),
]

moduleclass = 'devel'
