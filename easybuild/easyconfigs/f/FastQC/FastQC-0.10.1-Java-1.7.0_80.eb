source_urls = ['http://www.bioinformatics.babraham.ac.uk/projects/%(namelower)s']

patches = ['FastQC_shebang.patch']

java = 'Java'
javaver = '1.7.0_80'
versionsuffix = '-%s-%s' % (java, javaver)
dependencies = [(java, javaver)]

postinstallcmds = ['chmod +x %(installdir)s/fastqc']

