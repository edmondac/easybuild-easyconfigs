# SIB Swiss Institute of Bioinformatics 

easyblock = 'PackedBinary'

name = "REMORA"
version = "1.8.2"

homepage = 'https://github.com/TACC/remora'
description = """REsource MOnitoring for Remote Applications"""

toolchain = {'name': 'goolf', 'version': '1.7.20'}

source_urls = ['https://github.com/TACC/remora/archive/']
sources = ['v%(version)s.tar.gz']

unpack_options = '--strip-components=1'

install_cmd = 'REMORA_INSTALL_PREFIX=%(installdir)s ./install.sh'

modextravars = {
    'REMORA_BIN': '%(installdir)s/bin',
}

sanity_check_paths = {
    'files': ['bin/remora'],
    'dirs': []
}

moduleclass = 'tools'
