easyblock = 'MakeCp'

name = 'LIBSVM'
version = '3.17'

homepage = 'http://www.csie.ntu.edu.tw/~cjlin/libsvm/'
description = "gzip (GNU zip) is a popular data compression program as a replacement for compress"

toolchain = {'name': 'ictce', 'version': '4.1.13'}

source_urls = [homepage]
sources = [SOURCELOWER_TAR_GZ]

dependencies = [('Qt', '4.8.4')]

makeopts = ' && cd svm-toy/qt && make MOC=$EBROOTQT/bin/moc '
makeopts += 'CFLAGS="$CFLAGS -I$EBROOTQT/include -I$EBROOTQT/include/QtGui -lQtGui -lQtCore" && cd -'

files_to_copy = [(['svm-*'], 'bin'), 'tools']

sanity_check_paths = {
    'files': ['bin/svm-%s' % x for x in ['predict', 'scale', 'toy', 'train']],
    'dirs': ['tools'],
}

moduleclass = 'lib'
