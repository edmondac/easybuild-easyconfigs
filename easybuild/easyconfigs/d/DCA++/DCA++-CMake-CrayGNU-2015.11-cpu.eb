easyblock = 'Bundle'

name = 'DCA++'
version = '1.0'
versionsuffix = '-cpu'

#consider building everything with eb:
#preinstallopts: change build_directory
#disable clean build directory

homepage = 'http://www.itp.phys.ethz.ch/research/comp/computation.html'
description = """The DCA++ software project is a C++ implementation of the dynamical cluster approximation (DCA) and its DCA+ extension. It aims to solve lattice models of strongly correlated electron systems. This module bundles all the dependencies and does not make use of the GPU."""

toolchain = {'name': 'CrayGNU', 'version': '2015.11'}

dependencies = [
    ('CMake', '3.5.0'),	
    ('spglib', '1.7.3'), 
    ('NFFT', '3.3.0'), 
    ('gtest', '1.7.0'), 
    ('cray-hdf5/1.8.13', EXTERNAL_MODULE),
]

moduleclass = 'phys'
