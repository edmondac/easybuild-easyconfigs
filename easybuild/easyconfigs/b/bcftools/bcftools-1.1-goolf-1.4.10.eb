name = 'bcftools'
version = '1.1'

homepage = 'http://www.htslib.org/'
description = """ utilities for variant calling and manipulating VCFs and BCFs """

toolchain = {'name': 'goolf', 'version': '1.4.10'}

source_urls = [('http://sourceforge.net/projects/samtools/files/samtools/%(version)s', 'download')]
sources = [SOURCE_TAR_BZ2]

dependencies = [('zlib', '1.2.8')]

parallel = 1

skipsteps = ['configure']

installopts = ' prefix=%(installdir)s'

sanity_check_paths = {
    'files': ["bin/%s" % x for x in ["bcftools", "plot-vcfstats", "vcfutils.pl"]],
    'dirs': [],
}

moduleclass = 'bio'
