easyblock = 'MakeCp'

name = 'ZPAQ'
version = '6.57'

homepage = 'http://mattmahoney.net/dc/zpaq.html'
description = """Quip compresses next-generation sequencing data with extreme prejudice.
 It supports input and output in the FASTQ and SAM/BAM formats,
 compressing large datasets to as little as 15% of their original size."""

toolchain = {'name': 'GCC', 'version': '4.8.2'}

sources = ['%%(namelower)s%s.zip' % ''.join(version.split('.'))]
source_urls = ['http://mattmahoney.net/dc/']

buildopts = " && pod2man zpaq.pod > zpaq.1"

files_to_copy = [(['zpaq'], 'bin'), (['zpaq.1'], 'share/man'), (['libzpaq.h', 'libzpaq.cpp'], 'include')]

sanity_check_paths = {
    'files': ['bin/zpaq', 'share/man/zpaq.1', 'include/libzpaq.h', 'include/libzpqq.cpp'],
    'dirs': []
}

moduleclass = 'bio'
