easyblock = 'MakeCp'

name = 'Stampy'
version = '1.0.28'

homepage = 'http://www.well.ox.ac.uk/stampy'
description = """Stampy is a package for the mapping of short reads from illumina sequencing machines onto
 a reference genome."""

toolchain = {'name': 'intel', 'version': '2015b'}

# download from http://www.well.ox.ac.uk/bioinformatics/Software/Stampy-latest.tgz and rename to Stampy-1.0.28.tgz
sources = [SOURCE_TGZ]
checksums = ['c4f519e13b60be2089ab2dce20f71217']

patches = ['Stampy-%(version)s_fix-hardcoding.patch']

pyver = '2.7.10'
versionsuffix = '-Python-%s' % pyver
dependencies = [
    ('Python', pyver),
]

files_to_copy = ['maptools.so', 'plugins', 'README.txt', 'Stampy', 'stampy.py']

sanity_check_paths = {
    'files': ['maptools.so', 'stampy.py'],
    'dirs': ['plugins', 'Stampy'],
}

moduleclass = 'bio'
