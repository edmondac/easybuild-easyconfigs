# This file is an EasyBuild reciPY as per https://github.com/hpcugent/easybuild

easyblock = 'CMakeMake'

name = 'Salmon'
version = '0.8.2'
versionsuffix = '-Python-2.7.12'

homepage = 'https://github.com/COMBINE-lab/salmon'
description = """Salmon is a wicked-fast program to produce a highly-accurate,
 transcript-level quantification estimates from RNA-seq data."""

toolchain = {'name': 'foss', 'version': '2016b'}
toolchainopts = {'pic': True, 'openmp': True}

sources = ['v%(version)s.tar.gz']
source_urls = ['https://github.com/COMBINE-lab/salmon/archive/']

checksums = ['299168e873e71e9b07d63a84ae0b0c41b0876d1ad1d434b326a5be2dce7c4b91']

patches = ['Salmon-%(version)s_skip-included-Jellyfish.patch']

builddependencies = [('CMake', '3.7.2')]

dependencies = [
    ('Boost', '1.63.0', versionsuffix),
    ('tbb', '2017_U5'),
    ('Jellyfish', '2.2.6'),
]

sanity_check_paths = {
    'files': ['bin/salmon'],
    'dirs': []
}

moduleclass = 'bio'
