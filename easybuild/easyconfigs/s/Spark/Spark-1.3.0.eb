easyblock = 'Tarball'

name = 'Spark'
version = '1.3.0'

homepage = 'http://spark.apache.org'
description = """Spark is Hadoop MapReduce done in memory"""

toolchain = {'name': 'dummy', 'version': ''}

sources = ['%(namelower)s-%(version)s-bin-hadoop2.3.tgz']
source_urls = ['http://www.apache.org/dyn/closer.cgi/spark/%(namelower)s-%(version)s']

java = 'Java'
javaver = '1.7.0_40'

dependencies = [(java, javaver)]

sanity_check_paths = {
    'files': ['bin/spark-shell'],
    'dirs': ['bin', 'lib', 'python']
}

modextrapaths = {'PYTHONPATH': 'python'}

moduleclass = 'devel'
