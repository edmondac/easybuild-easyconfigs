name = 'TensorFlow'
version = '1.8.0'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://www.tensorflow.org/'
description = "An open-source software library for Machine Intelligence"

toolchain = {'name': 'intel', 'version': '2018a'}

source_urls = ['https://github.com/tensorflow/tensorflow/archive/']
sources = ['v%(version)s.tar.gz']
patches = [
    'TensorFlow-1.5.0_swig-env.patch',
    'TensorFlow-%(version)s_icc-fixes.patch',
    'TensorFlow-1.8.0_remove-msse-hardcoding.patch',
    'TensorFlow-1.6.0_use_64b_alignment.patch',
    'TensorFlow-1.7.0_remove_DATE_defines.patch',
    'TensorFlow-1.8.0_no_grpc.patch',
    'TensorFlow-1.8.0_no_boringssl.patch',
]
checksums = [
    '47646952590fd213b747247e6870d89bb4a368a95ae3561513d6c76e44f92a75',  # v1.8.0.tar.gz
    '53807290f1acb6a0f2a84f1a0ad9f917ee131c304b3e08679f3cbd335b22c7ef',  # TensorFlow-1.5.0_swig-env.patch
    '15528ced7932cdb3286c60ac47c00de044e456ac5ddb828a888d107dcd5586dc',  # TensorFlow-1.8.0_icc-fixes.patch
    '4b94fb2cba75c69a4a043f361c9376d3c9eabd9d66656ac6f9a249609a6da833',  # TensorFlow-1.8.0_remove-msse-hardcoding.patch
    '6d107a3541798d51fa458d6fd765be73bddaa03735cbd062af73d9dd52610c6f',  # TensorFlow-1.6.0_use_64b_alignment.patch
    '3944003b9321bea41093bf066b3a6722b712b090bab6c8996a8ffa7c0cf6a42f',  # TensorFlow-1.7.0_remove_DATE_defines.patch
]

builddependencies = [
    ('Bazel', '0.11.1'),
    ('wheel', '0.30.0', versionsuffix),
]

dependencies = [('Python', '3.6.4')]

preconfigopts = 'env CC_OPT_FLAGS="$CC_OPT_FLAGS -U__AVX512F__" '

parallel = 20

moduleclass = 'lib'
