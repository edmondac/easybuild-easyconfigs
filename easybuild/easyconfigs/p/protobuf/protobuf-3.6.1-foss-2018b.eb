easyblock = 'ConfigureMake'

name = 'protobuf'
version = '3.6.1'

homepage = 'https://github.com/google/protobuf/'
description = """Google Protocol Buffers"""

toolchain = {'name': 'foss', 'version': '2018b'}

source_urls = ['https://github.com/google/protobuf/releases/download/v%(version)s/']
sources = ['protobuf-cpp-%(version)s.tar.gz']
checksums = ['b3732e471a9bb7950f090fd0457ebd2536a9ba0891b7f3785919c654fe2a2529']

builddependencies = [('Autotools', '20180311')]

preconfigopts = "./autogen.sh && "

sanity_check_paths = {
    'files': ['bin/protoc', 'lib/libprotobuf.%s' % SHLIB_EXT],
    'dirs': [],
}

moduleclass = 'devel'
