easyblock = 'PythonPackage'

name = 'pycrypto'
version = '2.6.1'

homepage = 'http://www.pycrypto.org/'
description = """Cryptographic modules for Python."""

toolchain = {'name': 'dummy', 'version': 'dummy'}

source_urls = [PYPI_SOURCE]
sources = [SOURCE_TAR_GZ]

# allow use of system Python
allow_system_deps = [('Python', SYS_PYTHON_VERSION)]

# install into a path that's no specific to the Python version being used
installopts = '--install-lib=%(installdir)s/lib --no-compile'

options = {'modulename': 'Crypto'}

modextrapaths = {'PYTHONPATH': ['lib']}

sanity_check_paths = {
  'files': [],
  'dirs': ['lib/Crypto']
}

moduleclass = 'lib'
