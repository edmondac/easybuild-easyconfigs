name = 'NCL'
version = '6.4.0'

homepage = 'http://www.ncl.ucar.edu'
description = "NCL is an interpreted language designed specifically for scientific data analysis and visualization."

toolchain = {'name': 'intel', 'version': '2018a'}
toolchainopts = {'cstd': 'c99', 'openmp': True, 'pic': True}

# download via https://www.earthsystemgrid.org/dataset/ncl.html
sources = ['%(namelower)s_ncarg-%(version)s.tar.gz']
patches = ['NCL-%(version)s_fix-types.patch']
checksums = [
    'ebc9ec9538044cc4887c0c46adac8522242528d40c974e0b88b5b5d756f22a17',  # ncl_ncarg-6.4.0.tar.gz
    'f6dfaf95e5de9045745e122cb44f9c035f81fab92f5892991ddfe93945891c8f',  # NCL-6.4.0_fix-types.patch
]

hdf5_ver = '1.10.1'

dependencies = [
    ('cURL', '7.55.1'),
    ('JasPer', '1.900.1'),
    ('g2lib', '1.4.0'),
    ('g2clib', '1.6.0'),
    ('HDF', '4.2.13'),
    ('HDF5', hdf5_ver),
    ('netCDF', '4.6.0', '-HDF5-%s' % hdf5_ver),
    ('netCDF-Fortran', '4.4.4', '-HDF5-%s' % hdf5_ver),
    ('Szip', '2.1.1'),
    ('freetype', '2.9'),
    ('zlib', '1.2.11'),
    ('GDAL', '2.2.3', '-Python-2.7.14-HDF5-%s' % hdf5_ver),
    ('UDUNITS', '2.2.26'),
    ('ESMF', '7.0.2'),
    ('bzip2', '1.0.6'),
    ('cairo', '1.14.12'),
    ('libiconv', '1.15'),
    ('GSL', '2.4'),
]
builddependencies = [('makedepend', '1.0.5')]

sanity_check_paths = {
    'files': ['bin/fontc', 'lib/libncarg.a'],
    'dirs': ['include/ncarg', 'lib/ncarg/fontcaps'],
}

moduleclass = 'data'
