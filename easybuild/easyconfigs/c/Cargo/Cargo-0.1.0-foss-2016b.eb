easyblock = 'ConfigureMake'

name = 'Cargo'
version = '0.1.0'

homepage = 'https://crates.io/'
description = "The Rust package manager"

toolchain = {'name': 'foss', 'version': '2016b'}

source_urls = ['https://github.com/rust-lang/cargo/archive/']
sources = ['%(version)s.tar.gz']

dependencies = [
    ('Rust', '1.12.1'),
]
builddependencies = [
    ('CMake', '3.6.2'),
    ('Python', '2.7.12'),
    ('cURL', '7.49.1'),
]

buildopts = 'VERBOSE=1'

sanity_check_paths = {
    'files': [],
    'dirs': [],
}

moduleclass = 'tools'
